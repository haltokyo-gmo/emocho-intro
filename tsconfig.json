{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "alwaysStrict": true,
		"noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
	"compileOnSave": false,
	"filesGlob": [
		"scripts/*"
	],
	"exclude": [
		"node_modules"
	]
}
